<html lang="en">

<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/imagesStyle.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</head>

<body style="background-color:rgb(192,192,192,0.3)" >
  <header class="header">
    <div class="container-fluid" role="navigation">
      <nav class=" navbar navbar-expand-lg navbar navbar-light">
        <a class="navbar-brand" href="#"><i class="fa fa-camera"></i> Processing Images</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="nav navbar-nav ml-auto">
            <li class="navbar-item"> <a class="nav-link" href="addimage">Add Image</a> </li>
          </ul>
        </div>
      </nav>
    </div>
  </header>

  <div class="container">

    <div id="demo" class="carousel slide" data-ride="carousel">
      <ul class="carousel-indicators">
        <li data-target="#demo" data-slide-to="0" class="active"></li>
        <% photo.forEach(function(photo) { %>
        <li data-target="#demo" data-slide-to="1"></li>
        <% }) %>
      </ul>
      <form action="/download" method="post">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <div class="carousel-caption">
              <h6>Always remember to look at the stars</h6>
              <p>Juanc Arteaga</p>
            </div>
          </div>
          <% photo.forEach(function(photo) { %>
          <div class="carousel-item">
            <img src="<%=photo.codeBase64Img%>">
            <div class="carousel-caption">
              <h6>Always remember to look at the stars -Stephen Hawking</h6>
              <a class="btn btn-light" href="<%= photo.url %>" download> Download </a>
            </div>
          </div>
          <% }) %>
        </div>
      </form>

      <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
      </a>
      <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
      </a>
    </div>
  </div>
</body>

</html>
